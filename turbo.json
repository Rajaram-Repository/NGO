{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**"]
    },
    "frontend:build": {
      "cache": true,
      "outputs": [".next/**"]
    },
    "backend:build": {
      "cache": true,
      "outputs": ["dist/**"]
    }
  }
}
