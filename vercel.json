{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://api.example.com"
  },
  "installCommand": "npm install",  // Or yarn install, pnpm install
  "buildCommand": "npm run build",  // Or next build
  "outputDirectory": ".next"       // This is the default for Next.js
}
